/*
 * Onedarker Theme
 *
 *
 * Author: Chris
 */
configuration {
        modi: "drun,window";
        show-icons:   true;
        /*kb-mode-next: "Tab";*/
}

* {
	black:   #1E2127;
	red:     #E06c75;
	green:   #98C379;
  yellow:  #d19a66;
	blue:    #61AFEF;
	magenta: #C678DD;
	cyan:    #56b6c2;
	white:   #FFFFFF;

	spacing: 0;
	background-color: transparent;

	font: "Fira Code 15";
}

window {
	transparency: "real";
	/*fullscreen: true;*/
	background-color: #1E2127EA; /*black + CC (80% opacity)*/
}

mainbox {
	children: [inputbar, message, mode-switcher, listview];
	spacing: 30px;
	padding: 30px 0;
  border: 1px;
	border-color: @blue;
}

inputbar {
	padding: 0 30px;
	children: [prompt, textbox-prompt-colon, entry, case-indicator];
}

prompt {
	text-color: @blue;
}

textbox-prompt-colon {
	expand: false;
	str: ":";
	margin: 0 1ch 0 0;
	text-color: @blue;
}

entry {
	text-color: @white;
}

case-indicator {
	text-color: @red;
}

mode-switcher, message {
	border: 1px 0;
	border-color: @blue;
}

button, textbox {
	background-color: @magenta;
	text-color: @white;
	padding: 5px;
}

button selected {
	background-color: @blue;
}

listview {
	scrollbar: true;
	margin: 0 10px 0 30px;
}

scrollbar {
	background-color: @magenta;
	handle-color: @blue;
	handle-width: 10px;
	border: 0 1px;
	border-color: @blue;
	margin: 0 0 0 20px;
}

element {
	padding: 5px;
	highlight: bold underline;
}

element normal {
	background-color: transparent;
}

element selected {
	background-color: @blue;
}

element normal normal, element selected normal, element alternate normal {
	text-color: @white;
}

element normal urgent, element selected urgent, element alternate urgent {
	text-color: @red;
}

element normal active, element selected active, element alternate active {
	text-color: @green;
}
